## COMMON_PRE_CONFIG_FRAG

AAP_OBJS = aap.o cpu.o aap-desc.o \
	decode.o sem.o mloop.o

SIM_OBJS = \
	$(SIM_NEW_COMMON_OBJS) \
	sim-cpu.o \
	sim-hload.o \
	sim-model.o \
	sim-reg.o \
	cgen-utils.o cgen-trace.o cgen-scache.o \
	cgen-run.o sim-reason.o sim-stop.o \
	sim-if.o arch.o \
	$(AAP_OBJS)

# Extra headers included by sim-main.h.
SIM_EXTRA_DEPS = \
	$(CGEN_INCLUDE_DEPS) \
	arch.h cpuall.h aap-desc.h aap-opc.h

SIM_EXTRA_CFLAGS =

SIM_EXTRA_CLEAN = aap-clean

## COMMON_POST_CONFIG_FRAG

arch = aap

sim-if.o: sim-if.c $(SIM_MAIN_DEPS) $(srcdir)/../common/sim-core.h

arch.o: arch.c $(SIM_MAIN_DEPS)

aap-desc.o: aap-desc.c $(SIM_MAIN_DEPS)

devices.o: devices.c $(SIM_MAIN_DEPS)

# AAP objs

AAP_INCLUDE_DEPS = \
	$(CGEN_MAIN_CPU_DEPS) \
	cpu.h decode.h \
	decode.h eng.h

aap.o: aap.c $(AAP_INCLUDE_DEPS)

mloop.o: mloop.c sem-switch.c $(AAP_INCLUDE_DEPS)
	$(CC) -c $(srcdir)/mloop.c $(ALL_CFLAGS) -DWANT_ISA_AAPBF

cpu.o: $(srcdir)/cpu.c $(AAP_INCLUDE_DEPS)

decode.o: decode.c $(AAP_INCLUDE_DEPS)
	$(CC) -c $(srcdir)/decode.c $(ALL_CFLAGS) -DWANT_ISA_AAPBF

sem.o: sem.c $(AAP_INCLUDE_DEPS)
	$(CC) -c $(srcdir)/sem.c $(ALL_CFLAGS) -DWANT_ISA_AAPBF

aap-clean:
	rm -f tmp-*
	rm -f stamp-defs
	rm -f stamp-arch stamp-desc stamp-cpu

# cgen support, enable with --enable-cgen-maint
CGEN_MAINT = ; @true
# The following line is commented in or out depending upon --enable-cgen-maint.
@CGEN_MAINT@CGEN_MAINT =

# Utility rules for humans.
.PHONY: stamp-all
stamp-all: stamp-arch stamp-desc stamp-cpu stamp-mloop

# NOTE: Generated source files are specified as full paths,
# e.g. $(srcdir)/arch.c, because make may decide the files live
# in objdir otherwise.

stamp-arch: $(CGEN_READ_SCM) $(CGEN_ARCH_SCM) $(srcdir)/../../cpu/aap.cpu $(srcdir)/../../cpu/aap.opc Makefile
	$(MAKE) cgen-arch $(CGEN_FLAGS_TO_PASS) mach=aap32 isa=aap SUFFIX= archfile=$(srcdir)/../../cpu/aap.cpu \
	  FLAGS="with-scache"
	touch $@
$(srcdir)/arch.h $(srcdir)/arch.c $(srcdir)/cpuall.h: $(CGEN_MAINT) stamp-arch
	@true

stamp-desc: $(CGEN_READ_SCM) $(CGEN_CPU_SCM) $(srcdir)/../../cpu/aap.cpu $(srcdir)/../../cpu/aap.opc $(srcdir)/../../cpu/aap.cpu Makefile
	$(MAKE) cgen-desc $(CGEN_FLAGS_TO_PASS) cpu=aapbf mach=aap32 isa=aap SUFFIX= archfile=$(srcdir)/../../cpu/aap.cpu 
	touch $@
$(srcdir)/aap-desc.h $(srcdir)/aap-desc.c $(srcdir)/aap-opc.h: $(CGEN_MAINT) stamp-desc
	@true

stamp-cpu: $(CGEN_READ_SCM) $(CGEN_CPU_SCM) $(CGEN_DECODE_SMC) $(srcdir)/../../cpu/aap.cpu $(srcdir)/../../cpu/aap.opc $(srcdir)/../../cpu/aap.cpu Makefile
	$(MAKE) cgen-cpu-decode $(CGEN_FLAGS_TO_PASS) \
	  cpu=aapbf mach=aap32 isa=aap SUFFIX= \
		archfile=$(srcdir)/../../cpu/aap.cpu \
		FLAGS="with-scache" \
		EXTRAFILES="$(CGEN_CPU_SEM)"
	touch $@
$(srcdir)/cpu.h $(srcdir)/cpu.c: $(CGEN_MAINT) stamp-cpu
	@true

stamp-mloop: $(srcdir)/../common/genmloop.sh mloop.in Makefile
	$(SHELL) $(srccom)/genmloop.sh -shell $(SHELL) \
		-mono -scache  \
		-cpu aapbf -infile $(srcdir)/mloop.in
	$(SHELL) $(srcroot)/move-if-change eng.hin eng.h
	$(SHELL) $(srcroot)/move-if-change mloop.cin mloop.c
	touch $@
mloop.o: mloop.c $(AAP_INCLUDE_DEPS)

